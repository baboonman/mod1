#version 150
uniform mat4 proj;
uniform mat4 rotation;
in vec3     coord;
out vec3    color_frag;

void main()
{
   float    color;
   gl_Position = proj * rotation * vec4(coord, 1.0);
   color = (coord.y + 1.0) / 2.0;
   color_frag = vec3(color, (color / 2.0) + abs(coord.x), (color / 2.0) +
   abs(coord.y));
}
